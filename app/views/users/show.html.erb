<% provide(:title, @user.real_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.real_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.personal_directives.any? %>
    <h3>Personal Directives (<%= @user.personal_directives.count %>)</h3>
    <ol class="directives">
      <%= render partial: "shared/feed", collection: @feed_items %>
    </ol>
    <%= will_paginate @feed_items %>
  <% end %>
  </div>
</div>


