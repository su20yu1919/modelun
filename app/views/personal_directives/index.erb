<% if user_signed_in? && !@user.nil? %>
    <% provide(:title, @user.position) %>
    <% @user = current_user %>
    <div class="row">
      <aside class="col-md-3">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <% if current_user.type == "Crisiks" %>
        <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
            <div>
              Search
              <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
              <%= f.text_field(
                      :search_query,
                  ) %>
            </div>
            <div>
              Tags
              <%= f.select(
                      :with_tag_name,
                      @filterrific.select_options[:with_tag_name],
                      { include_blank: '- Any -' }, multiple:true
                  ) %>
            </div>
            <div>
              User
              <%= f.select(
                      :with_user,
                      @filterrific.select_options[:with_user],
                      { include_blank: '- Any -' }, multiple:true
                  ) %>
            </div>

            <%= f.submit "submit" %>

        <% end %>
        <% end %>
      </aside>

      <div class="col-md-9">
        <% if current_user.type == "Delegakte" %>
        <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
            <div>
              Search
              <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
              <%= f.text_field(
                      :search_query,
                  ) %>
            </div>
            <%= f.submit "submit" %>
        <% end %>
        <% end %>
          <h3>Personal Directives (Crisis Notes) (<%= @pd_feed.count %>)</h3>
          <%= link_to "new personal directives", new_personal_directive_path, :target => '_blank' if current_user[:type] == "Delegate"%>
          <ol class="directives">
            <%= render "pd_feed" %>
          </ol>
      </div>
    </div>
<% end %>

