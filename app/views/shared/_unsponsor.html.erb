<% directive = Directive.find_by(id: directive_id) %>
<%= form_for(current_user.sponsorships.find_by(directive_id: directive_id),
        html: { method: :delete }, remote: true) do |f| %>
  <%= hidden_field_tag :user_id, current_user[:id] %>
  <%= hidden_field_tag :directive_id, directive_id %>
  <%= f.submit "Unsponsor", class: "btn btn-primary btn-xs" %>
<% end %>