<% directive = Directive.find_by(id: directive_id) %>
<% unless directive.creators.include?(current_user) %>
  <div id="follow_form">
    <% if directive.sponsors.include?(current_user) %>
      <%= render partial: 'shared/unsponsor', locals: {directive_id: directive_id} %>
    <% elsif !directive.signers.include?(current_user) %>
      <%= render partial: 'shared/sponsor', locals: {directive_id: directive_id} %>
    <% end %>
  </div>
<% end %>