<% if user_signed_in? && !current_user.nil? %>
    <% provide(:title, current_user.name) %>
    <% @user = current_user %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <% if @user[:type] == "Crisis" %>
          <h4>New Crisis Update</h4>
          <span>
              <%= render 'directives/form' %>
          </span>
        <% end %>
      </aside>
      <div class="col-md-8">
      <% if @cs_feed.any? %>
        <h3>Crisis Updates(<%= @cs_feed.count %>)</h3>
        <ol class="directives">
          <%= render "shared/cs_feed" %>
        </ol>
      <% end %>
      </div>
    </div>
<% end %>

