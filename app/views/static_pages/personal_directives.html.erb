<% if logged_in? && !@user.nil?%>
    <% provide(:title, @user.real_name) %>
    <% @user = current_user %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <span>
            <%= render 'directives/form' %>
        </span>
      </aside>
      <div class="col-md-8">
      <% if @user.personal_directives.any? %>
        <h3>Personal Directives (<%= @user.personal_directives.count %>)</h3>
        <ol class="directives">
          <%= render "shared/feed" %>
        </ol>
      <% end %>
      </div>
    </div>
<% end %>

