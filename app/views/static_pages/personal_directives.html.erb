<% if user_signed_in? && !@user.nil? %>
    <% provide(:title, @user.position) %>
    <% @user = current_user %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <% if current_user[:type] == "Delegate" %>
            <h4>New Personal Directives</h4>
        <span>
            <%= render 'directives/form' %>
        </span>
        <% end %>
      </aside>
      <div class="col-md-8">
        <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
            <div>
              Search
              <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
              <%= f.text_field(
                      :search_query,
                  ) %>
            </div>
            <%= f.submit "submit" %>

        <% end %>
        <% if @pd_feed.any? %>
          <h3>Personal Directives (<%= @pd_feed.count %>)</h3>
          <ol class="directives">
            <%= render "shared/pd_feed" %>
          </ol>
        <% end %>
      </div>
    </div>
<% end %>

